<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppPrism.Shared.Views.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Home Page">
    <ContentPage.Content>
        <StackLayout>
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="Xamarin Forms com Prism"
                VerticalOptions="CenterAndExpand" />
            <Button Command="{Binding GoToLoginPageCommand}" Text="Ir para LoginPage" />

            <Button Command="{Binding GoToTabbedInLineCommand}" Text="Ir para TabbedPage com Páginas Inline" />

            <Button Command="{Binding GoToTabbedInPageCommand}" Text="Ir para TabbedPage com Páginas Individuais" />

            <Button Command="{Binding MyCommand}" Text="Ir para a Profile Page usando o Prism Navigation!" />

            <Button Command="{Binding GoToTabCommand}" Text="Ir para a TabPage com o Prism Navigation!" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>